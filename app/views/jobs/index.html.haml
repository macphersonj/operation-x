.container
  .row
    .col-md-3
    
    .col-md-9
      .panel.panel-default
        .panel-heading
          Job Search
        .panel-body
          = form_tag jobs_path, method: "get" do
            .row
              .col-md-10.form-group
                = text_field_tag :search, params[:search], class: "form-control"
              .col-md-1.form-group
                = submit_tag "Search", :name => nil, class: "btn btn-default"

        
      - @jobs.each do |job|
        .panel.panel-default
          .panel-heading
            %strong
              = job.title
          .panel-body
            = simple_format job.list_snippet
            = job.location
            = link_to "View", job
